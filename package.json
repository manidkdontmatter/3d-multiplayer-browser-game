{
  "name": "browser-game",
  "version": "0.1.0",
  "description": "Authoritative first-person browser game scaffold (Three.js + Rapier + nengi 2.0)",
  "private": true,
  "scripts": {
    "assets:build:manifest": "tsx scripts/build-asset-manifest.ts",
    "assets:ensure:manifest": "tsx scripts/ensure-asset-manifest.ts",
    "dev": "concurrently -n CLIENT,SERVER -c cyan,green \"npm:dev:client\" \"npm:dev:server\"",
    "predev:client": "npm run assets:ensure:manifest",
    "dev:client": "vite",
    "dev:server": "tsx watch src/orchestrator/main.ts",
    "dev:server:single": "tsx watch src/server/main.ts",
    "build": "npm run build:client && npm run build:server",
    "prebuild:client": "npm run assets:build:manifest",
    "build:client": "vite build",
    "build:server": "tsup src/orchestrator/main.ts src/server/main.ts --format esm --target node20 --sourcemap --out-dir dist/server",
    "preview": "vite preview",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "tsc -p tsconfig.client.json --noEmit --incremental --tsBuildInfoFile tsconfig.client.tsbuildinfo",
    "typecheck:server": "tsc -p tsconfig.server.json --noEmit --incremental --tsBuildInfoFile tsconfig.server.tsbuildinfo",
    "verify:quick": "npm run typecheck:client && npm run test:smoke:fast",
    "verify:quick:standalone": "npm run typecheck:client && npm run test:smoke",
    "test:smoke": "node scripts/smoke-e2e.js",
    "test:smoke:fast": "node scripts/smoke-fast.js",
    "test:melee": "node scripts/melee-e2e.js",
    "test:projectile:damage": "node scripts/projectile-damage-e2e.js",
    "test:multiplayer": "node scripts/multiplayer-e2e.js",
    "test:transfer": "node scripts/transfer-e2e.js",
    "test:orchestrator:hardening": "node scripts/orchestrator-hardening-e2e.js",
    "profile:multiplayer:cpu:5s": "node --input-type=module -e \"process.env.E2E_USE_EXISTING_SERVER='1'; process.env.E2E_USE_EXISTING_CLIENT='1'; process.env.E2E_SIM_ONLY='1'; process.env.E2E_VIEWPORT_WIDTH='800'; process.env.E2E_VIEWPORT_HEIGHT='450'; process.env.E2E_MAX_WALLTIME_MS='20000'; process.env.E2E_ENABLE_PRIMARY_ACTION_TEST='0'; process.env.E2E_ENABLE_SPRINT_TEST='0'; process.env.E2E_ENABLE_JUMP_TEST='0'; process.env.E2E_ENABLE_RECONNECT_TEST='0'; process.env.E2E_ARTIFACTS_ON_PASS='0'; process.env.E2E_ARTIFACTS_ON_FAIL='0'; process.env.E2E_PROFILE_CAPTURE_MS='5000'; await import('./scripts/multiplayer-e2e.js');\"",
    "test:multiplayer:csp": "node --input-type=module -e \"process.env.E2E_CSP='1'; await import('./scripts/multiplayer-e2e.js');\"",
    "test:multiplayer:chaos": "node --input-type=module -e \"process.env.E2E_CSP='1'; process.env.E2E_NETSIM='1'; process.env.E2E_MIN_REMOTE_MOVEMENT='0.4'; process.env.E2E_REMOTE_MOVEMENT_TIMEOUT_MS='22000'; process.env.E2E_MIN_SPRINT_MOVEMENT='1.0'; process.env.E2E_MIN_JUMP_HEIGHT='0.35'; await import('./scripts/multiplayer-e2e.js');\"",
    "test:movement-parity": "tsx scripts/movement-parity.ts",
    "test:network-client:regression": "tsx scripts/network-client-regression.ts",
    "test:tick": "tsx scripts/tick-consistency.ts",
    "test:architecture": "tsx scripts/architecture-guards.ts",
    "test:procedural:determinism": "tsx scripts/procedural-world-determinism.ts",
    "test:load:network": "node --experimental-websocket --import tsx scripts/network-load-test.ts"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "threejs",
    "rapier",
    "nengi",
    "authoritative-server",
    "fps"
  ],
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@dimforge/rapier3d-compat": "0.19.3",
    "@pixiv/three-vrm": "3.4.5",
    "@pixiv/three-vrm-animation": "3.4.5",
    "better-sqlite3": "11.9.1",
    "bitecs": "0.4.0",
    "nengi": "2.0.0-alpha.173",
    "nengi-buffers": "0.5.0",
    "nengi-dataviews": "0.4.0",
    "nengi-uws-instance-adapter": "0.6.0",
    "nengi-websocket-client-adapter": "0.7.0",
    "simplex-noise": "4.0.3",
    "three": "0.182.0"
  },
  "devDependencies": {
    "@gltf-transform/cli": "4.3.0",
    "@gltf-transform/core": "4.3.0",
    "@gltf-transform/extensions": "4.3.0",
    "@gltf-transform/functions": "4.3.0",
    "@types/node": "25.2.3",
    "@types/three": "0.182.0",
    "concurrently": "9.2.1",
    "fbx2vrma-converter": "1.0.2",
    "ktx2-encoder": "0.5.1",
    "meshoptimizer": "1.0.1",
    "playwright": "1.58.2",
    "sharp": "0.34.5",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
